<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="Perseverance_Calculator_1.Pages.ButtonDescription"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Perseverance_Calculator_1.Pages"
    xmlns:model="using:Perseverance_Calculator_1.Model"
    xmlns:mvvm="using:Perseverance_Calculator_1.Model.MVVM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    
    RequestedTheme="Dark">

    <ScrollViewer HorizontalScrollMode="Auto" VerticalScrollMode="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Background="Black">
            <Grid.Resources>
                <SolidColorBrush x:Key="TextblockDescription" Color="#FF2AFF2A"/>
                <SolidColorBrush x:Key="TextboxDisabledForeground" Color="White"/>
                <SolidColorBrush x:Key="VariableDescriptionColor" Color="DeepSkyBlue"/>
            </Grid.Resources>
            <ScrollViewer>
                <StackPanel>


                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="Formula Name:" Margin="10" Foreground="{StaticResource TextblockDescription}" VerticalAlignment="Top"></TextBlock>
                        <TextBlock x:ConnectionId='12'                                                                                           Margin="10" TextWrapping="Wrap" MinWidth="710" MaxWidth="1220" Foreground="{StaticResource TextboxDisabledForeground}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Formula:" Margin="10" Foreground="{StaticResource TextblockDescription}" VerticalAlignment="Top"></TextBlock>
                        <TextBlock x:ConnectionId='11'                                                                                       Margin="10" TextWrapping="Wrap" MinWidth="710" MaxWidth="1220" Foreground="{StaticResource TextboxDisabledForeground}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Rearranged:" Margin="10" Foreground="{StaticResource TextblockDescription}" VerticalAlignment="Top"></TextBlock>
                        <TextBlock x:ConnectionId='10'                                                                                                 Margin="10" TextWrapping="Wrap" MinWidth="710" MaxWidth="1220" Foreground="{StaticResource TextboxDisabledForeground}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Use" Margin="10" Foreground="{StaticResource TextblockDescription}" VerticalAlignment="Top"></TextBlock>
                        <TextBlock x:ConnectionId='9'                                                                                   Margin="10" TextWrapping="Wrap" MinWidth="710" MaxWidth="1220" Foreground="{StaticResource TextboxDisabledForeground}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Description" Margin="10" Foreground="{StaticResource TextblockDescription}" VerticalAlignment="Top"></TextBlock>
                        <TextBlock x:ConnectionId='8'                                                                                           Margin="10" TextWrapping="Wrap" MinWidth="710" MaxWidth="1220" Foreground="{StaticResource TextboxDisabledForeground}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Variable Name" Width="260" Margin="2" TextWrapping="Wrap" Foreground="{StaticResource VariableDescriptionColor}"></TextBlock>
                            <TextBlock Text="Value" Width="260" Margin="2" TextWrapping="Wrap" Foreground="{StaticResource VariableDescriptionColor}"></TextBlock>
                            <TextBlock Text="Description" Width="260" Margin="2" TextWrapping="Wrap" Foreground="{StaticResource VariableDescriptionColor}"></TextBlock>
                        </StackPanel>
                        <ItemsControl x:ConnectionId='2'                                                                                          >
                            <ItemsControl.ItemTemplate>
                                <DataTemplate                                >

                                    <ScrollViewer x:ConnectionId='4'>
                                        <StackPanel Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock x:ConnectionId='5'                                   MinWidth="260" MaxWidth="260" Margin="2" TextWrapping="Wrap"></TextBlock>
                                                <TextBlock x:ConnectionId='6'                                    MinWidth="260" MaxWidth="260" Margin="2" TextWrapping="Wrap"></TextBlock>
                                                <TextBlock x:ConnectionId='7'                                          MinWidth="260" MaxWidth="700" Margin="2" TextWrapping="Wrap"></TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </ScrollViewer>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>


                    </StackPanel>



                </StackPanel>
            </ScrollViewer>
        </Grid>
    </ScrollViewer>
</Page>

