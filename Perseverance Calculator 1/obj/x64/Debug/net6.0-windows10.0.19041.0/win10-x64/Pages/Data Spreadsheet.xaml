<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="Perseverance_Calculator_1.Pages.Data_Spreadsheet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Perseverance_Calculator_1.Pages"
    xmlns:mvvm="using:Perseverance_Calculator_1.Model.MVVM"
    xmlns:model="using:Perseverance_Calculator_1.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Dark"
    >

    <!--<ScrollViewer HorizontalScrollMode="Auto" VerticalScrollMode="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">-->
        <Grid Background="Black">

            <Grid.Resources>

                <SolidColorBrush x:Key="SearchPlaceHolderForeground" Color="#FF0EFF0E"/>
                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#FF0090FF"/>
                <SolidColorBrush x:Key="DeleteXColor" Color="Red"/>
                <SolidColorBrush x:Key="DeleteXColorBackground" Color="#FF101010"/>

                <Style TargetType="Button">
                    <Setter Property="Background" >
                        <Setter.Value>
                            <SolidColorBrush Color="#0003B4C1" Opacity="1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="#FF0090FF" />
                    <Setter Property="BorderBrush" Value="#000090FF" />

                </Style>

                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="#FF0EFF0E" />
                </Style>

                <Style TargetType="TextBox">
                    <Setter Property="PlaceholderForeground" Value="DeepSkyBlue" />
                </Style>
            </Grid.Resources>






            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>





            <!--LEFT-->

            <StackPanel Orientation="Horizontal">
                <Button x:ConnectionId='20' Content="Save Data" Margin='2'                              ></Button>
                <Button x:ConnectionId='21' Content="Load Data" Margin='2'                              ></Button>
                <TextBlock x:ConnectionId='22' x:Name="Textblock_LoadedSpreadsheet" Text="Loaded Spreadsheet" VerticalAlignment="Center" Margin='2'></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Button x:ConnectionId='18' Content="Add Spreadsheet" Margin='2'                                    ></Button>
                <TextBox x:ConnectionId='19' x:Name="Textbox_DataSpreadsheetName" IsSpellCheckEnabled="False" PlaceholderText="Spreadsheet Name" VerticalAlignment="Center" Margin='2'></TextBox>
            </StackPanel>


            <ScrollViewer Grid.Column="0" Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">
                    <StackPanel.Resources>
                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#FF0EFF0E"/>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="#FF0EFF0E"></Setter>
                            <Setter Property="BorderBrush" Value="#000EFF0E"></Setter>
                            <Setter Property="Background" Value="#00DCDCDC"></Setter>
                        </Style>
                    </StackPanel.Resources>
                    <ItemsControl x:ConnectionId='13'                                                                                      >
                        <ItemsControl.ItemTemplate>
                            <DataTemplate                                     >

                                <StackPanel x:ConnectionId='15' Orientation="Horizontal">
                                    <Button x:ConnectionId='16' Content="X" Grid.Column="1" Margin="2" Foreground="{StaticResource DeleteXColor}" Background="{StaticResource DeleteXColorBackground}"                                                          >
                                        <Button.Resources>
                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF101010"/>
                                        </Button.Resources>
                                    </Button>
                                    <Button x:ConnectionId='17'                                             Grid.Column="0" Margin="2"                                                     ></Button>
                                </StackPanel>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>





            <!--RIGHT-->

            <!--<StackPanel Orientation="Horizontal" Grid.Column="1">
        <Button Content="Add Data"></Button>
    </StackPanel>-->

            <controls:WrapPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0">
                <Button x:ConnectionId='10' Content="Add Data" Margin="2"                             ></Button>
                <Button x:ConnectionId='11' Content="Search" Margin="2"                                ></Button>
                <TextBox x:ConnectionId='12' x:Name="Textbox_SearchData" IsSpellCheckEnabled="False" PlaceholderText="Search Data" Margin="2" VerticalAlignment="Center" PlaceholderForeground="{StaticResource SearchPlaceHolderForeground}" ScrollViewer.HorizontalScrollMode="Auto"></TextBox>
            </controls:WrapPanel>
            <ScrollViewer Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Vertical">

                        <ItemsControl x:ConnectionId='2' x:Name="ItemsControl_DataDataList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate                            >

                                    <StackPanel x:ConnectionId='4' Orientation="Vertical"                                                    >

                                        <controls:WrapPanel Orientation="Horizontal">

                                            <Button x:ConnectionId='5' Content="X" Margin="2" Foreground="{StaticResource DeleteXColor}" Background="{StaticResource DeleteXColorBackground}"                                                    IsTabStop="False">
                                                <Button.Resources>
                                                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF101010"/>
                                                </Button.Resources>
                                            </Button>
                                            <Button x:ConnectionId='6' Content="Set Data" Margin="2" Foreground="Black" Background="DeepSkyBlue"                                                                                          IsTabStop="False">
                                                <Button.Resources>
                                                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Black"/>
                                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="DeepSkyBlue"/>
                                                </Button.Resources>
                                            </Button>
                                            <TextBox x:ConnectionId='7'                                                                          PlaceholderText="Data Name" HorizontalAlignment="Stretch" Margin="2" AcceptsReturn="True" 
                                              ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollMode="Auto"
                                                                                                                                                                        IsSpellCheckEnabled="False"                                     ></TextBox>
                                            <TextBox x:ConnectionId='8'                                                                       IsSpellCheckEnabled="False" PlaceholderText="Data Value" Margin="2" AcceptsReturn="True"                                                                                                 ></TextBox>
                                            <TextBox x:ConnectionId='9'                                                                             IsSpellCheckEnabled="False" PlaceholderText="Data Description" Margin="2" AcceptsReturn="True"                                            ></TextBox>

                                        </controls:WrapPanel>

                                    </StackPanel>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

        </Grid>
    <!--</ScrollViewer>-->
</Page>

