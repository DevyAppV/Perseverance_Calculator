<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Perseverance_Calculator_1.Pages.Visual2D_Graph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Perseverance_Calculator_1.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Dark"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:GraphFormulaSelectionCollection="using:Perseverance_Calculator_1.Model.MVVM"
    xmlns:model="using:Perseverance_Calculator_1.Model"
>

    <!--<ScrollViewer HorizontalScrollMode="Auto" VerticalScrollMode="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">-->
    <Grid Background="Black">
        <Grid.Resources>

            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#FF0090FF"/>
            <SolidColorBrush x:Key="DeleteXColor" Color="Red"/>
            <SolidColorBrush x:Key="DeleteXColorBackground" Color="#FF101010"/>

            <Style TargetType="Button">
                <Setter Property="Background" >
                    <Setter.Value>
                        <SolidColorBrush Color="#0003B4C1" Opacity="1"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="#FF0090FF" />
                <Setter Property="BorderBrush" Value="#000090FF" />

            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="#FF0EFF0E" />
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="PlaceholderForeground" Value="DeepSkyBlue" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- ========================================================== -->
        <canvas:CanvasControl x:ConnectionId='2' x:Name="Win2D_Canvas" Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="0" Grid.RowSpan="1" ClearColor="White"                                                                                                                                                                                                        />

        <!-- ========================================================== -->
        <ScrollViewer Grid.Row="1" Grid.Column="1" HorizontalScrollMode="Auto" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
            <ScrollViewer.Resources>
                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="DeepSkyBlue"/>
                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Black"/>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="DeepSkyBlue"></Setter>
                    <Setter Property="Foreground" Value="Black"></Setter>
                </Style>
            </ScrollViewer.Resources>
            <StackPanel Orientation="Vertical">
                <ItemsControl x:ConnectionId='13' x:Name="GraphProperties_ItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"></StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate                                                 >
                            <StackPanel x:ConnectionId='16' Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Button x:ConnectionId='19' Content="Play"                           Margin="1"></Button>
                                    <Button x:ConnectionId='20' Content="Pause"                            Margin="1"></Button>
                                    <TextBox x:ConnectionId='21'                                                                             PlaceholderText="Axis Spacing"                                                                                                          ></TextBox>
                                    <TextBox x:ConnectionId='22'                                                                            PlaceholderText="Step X"                                                                                                        ></TextBox>
                                    <TextBox x:ConnectionId='23'                                                                            PlaceholderText="Step Y"                                                                                                        ></TextBox>
                                    <TextBox x:ConnectionId='24'                                                                            PlaceholderText="Scale"                                                                                                        ></TextBox>
                                    <TextBox x:ConnectionId='25'                                                                                 PlaceholderText="Resolution"></TextBox>
                                    <TextBox x:ConnectionId='26'                                                                             PlaceholderText="Point X"                                         ></TextBox>
                                    <TextBox x:ConnectionId='27'                                                                             PlaceholderText="Point Y"                                         ></TextBox>
                                    <TextBox x:ConnectionId='28'                                                                                PlaceholderText="X Location"></TextBox>
                                    <TextBox x:ConnectionId='29'                                                                                PlaceholderText="Y Location"></TextBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:ConnectionId='17'                                                                           PlaceholderText="Time (ms)"                                            ></TextBox>
                                    <TextBox x:ConnectionId='18'                                                                                 PlaceholderText="Time On Play (ms)"                                                  ></TextBox>

                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:ConnectionId='14' x:Name="TextBlock_GraphDirections" Foreground="White" FontSize="17"></TextBlock>
            </StackPanel>
        </ScrollViewer>

        <!-- ========================================================== -->

        <ScrollViewer Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="1" HorizontalScrollMode="Auto" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
            <ScrollViewer.Resources>
                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="DeepSkyBlue"/>
                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Black"/>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="DeepSkyBlue"></Setter>
                    <Setter Property="Foreground" Value="Black"></Setter>
                </Style>
            </ScrollViewer.Resources>
            <StackPanel>
                <Button x:ConnectionId='3' Content="Add" Margin="5"                                    ></Button>


                <StackPanel>
                    <ItemsControl x:ConnectionId='4' x:Name="GraphList_ItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"></StackPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate                                      >
                                <StackPanel x:ConnectionId='6' Orientation="Vertical">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="50"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Button x:ConnectionId='11' x:Name="Button_FormulaName" Margin="2" Grid.Column="0"                                             HorizontalAlignment="Stretch"                                                            ></Button>
                                        <Button x:ConnectionId='12' x:Name="Button_FormulaNameDelete" Grid.Column="1" Content="X" HorizontalAlignment="Stretch"                                                                   Background="{StaticResource DeleteXColorBackground}" Foreground="{StaticResource DeleteXColor}">
                                            <Button.Resources>
                                                <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Red"/>
                                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF101010"/>
                                            </Button.Resources>
                                        </Button>
                                    </Grid>
                                    <StackPanel x:ConnectionId='7' Orientation="Vertical"                                             >
                                        <TextBox x:ConnectionId='8'                                                                             PlaceholderText="Formula Name" IsSpellCheckEnabled="False" AcceptsReturn="False"></TextBox>
                                        <ComboBox x:ConnectionId='9'                                                                                        >
                                            <ComboBoxItem Content="Green" Foreground="Green"></ComboBoxItem>
                                            <ComboBoxItem Content="Yellow" Foreground="Yellow"></ComboBoxItem>
                                            <ComboBoxItem Content="Orange" Foreground="Orange"></ComboBoxItem>
                                            <ComboBoxItem Content="Brown" Foreground="Brown"></ComboBoxItem>
                                            <ComboBoxItem Content="Purple" Foreground="Purple"></ComboBoxItem>
                                            <ComboBoxItem Content="Red" Foreground="Red"></ComboBoxItem>
                                            <ComboBoxItem Content="Blue" Foreground="Blue"></ComboBoxItem>
                                        </ComboBox>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:ConnectionId='10' MinWidth="200" x:Name="Textbox_circleRadius"                                                                              PlaceholderText="Circle Radius" IsSpellCheckEnabled="False" AcceptsReturn="True" TextWrapping="Wrap"></TextBox>
                                            <!--<TextBlock Margin="5" Text="{x:Bind XYValue_Output,Mode=OneWay}" TextWrapping="Wrap"></TextBlock>-->
                                        </StackPanel>

                                    </StackPanel>

                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>



            </StackPanel>
        </ScrollViewer>



    </Grid>
    <!--</ScrollViewer>-->
</Page>

